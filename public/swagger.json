          "name": "tid",
          "description": "接收方的id",
          "in": "query",
          "type": "number"
        }, {
          "name": "role",
          "description": "发送方的角色（seller or buyer）",
          "in": "body",
          "type": "string"
        }],
        "responses": {
          "200": {
            "description": "获取成功",
            "schema": {
              "type": "object",
              "properties": {
                "sessionId": {
                  "type": "number"
                },
                "sellerId": {
                  "type": "number"
                },
                "buyerId": {
                  "type": "number"
                }
              },
              "example": {
                "sessionId": 1,
                "sellerId": 15331060,
                "buyerId": 15331059
              }
            }
          }
        }
      }
    },
