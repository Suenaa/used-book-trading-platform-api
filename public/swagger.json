    "/message/last": {
      "get": {
        "summary": "获取每个房间的最新消息（message页面用）",
        "responses": {
          "200": {
            "description": "获取成功",
            "schema": {
              "type": "array",
              "items": {
                "properties": {
                  "sessionId": {
                    "type": "number"
                  },
                  "senderId": {
                    "type": "number"
                  },
                  "recieverId": {
                    "type": "number"
                  },
                  "content": {
                    "type": "string"
                  },
                  "max-(time)": {
                    "description": "消息发送时间",
                    "type": "string"
                  }
                }
              },
              "example": [
                {
                  "sessionId": 1,
                  "senderId": 15331060,
                  "recieverId": 15331059,
                  "content": "你好，在吗？",
                  "max-(time)": "2018-06-07T07:49:39.000Z"
                }
              ]
            }
          }
        }
      }
    },
    "/message/{sessionId}": {
      "get": {
        "summary": "获取一个房间内所有消息",
        "parameters": [{
          "name": "sessionId",
          "type": "number",
          "description": "房间号",
          "in": "query"
        }],
        "responses": {
          "200": {
            "description": "获取成功",
            "schema": {
              "type": "array",
              "items": {
                "properties": {
                  "sessionId": {
                    "type": "number"
                  },
                  "senderId": {
                    "type": "number"
                  },
                  "recieverId": {
                    "type": "number"
                  },
                  "content": {
                    "type": "string"
                  },
                  "max-(time)": {
                    "description": "消息发送时间",
                    "type": "string"
                  }
                }
              },
              "example": [
                {
                  "sessionId": 1,
                  "senderId": 15331060,
                  "recieverId": 15331059,
                  "content": "你好，在吗？",
                  "max-(time)": "2018-06-07T07:49:39.000Z"
                }
              ]
            }
          }
        }
      },
      "post": {
        "summary": "向一个人发起消息",
        "description": "body即为消息",
        "produces": [
          "plain/text"
        ],
        "parameters": [{
          "name": "sessionId",
          "type": "number",
          "description": "房间号",
          "in": "query"
        }],
        "responses": {
          "200": {
            "description": "发送成功",
            "schema": {
              "type": "object",
              "properties": {
                "sessionId": {
                  "type": "number"
                },
                "senderId": {
                  "type": "number"
                },
                "recieverId": {
                  "type": "number"
                },
                "content": {
                  "type": "string"
                },
                "time": {
                  "type": "string"
                }
              },
              "example": {
                "sessionId": 1,
                "senderId": 15331060,
                "recieverId": 15331059,
                "content": "你好，在吗？",
                "time": "2018-06-07T07:49:39.000Z"
              }
            }
          }
        }
      }
    },
    "/message/to/{tid}": {
      "post": {
        "summary": "向一个人发起消息",
        "parameters": [{
          "name": "tid",
          "description": "接收方的id",
          "in": "query",
          "type": "number"
        }, {
          "name": "role",
          "description": "发送方的角色（seller or buyer）",
          "in": "body",
          "type": "string"
        }, {
          "name": "msg",
          "description": "发送的消息",
          "in": "body",
          "type": "string"
        }],
        "responses": {
          "200": {
            "description": "发送成功",
            "schema": {
              "type": "object",
              "properties": {
                "sessionId": {
                  "type": "number"
                },
                "senderId": {
                  "type": "number"
                },
                "recieverId": {
                  "type": "number"
                },
                "content": {
                  "type": "string"
                },
                "time": {
                  "type": "string"
                }
              },
              "example": {
                "sessionId": 1,
                "senderId": 15331060,
                "recieverId": 15331059,
                "content": "你好，在吗？",
                "time": "2018-06-07T07:49:39.000Z"
              }
            }
          }
        }
      }
    },
    "/message/session/{tid}": {
      "post": {
        "summary": "创建房间",
