  "paths": {
    "/user/login": {
      "get": {
        "summary": "查询用户登陆信息",
        "response": {
          "200": {
            "description": "已登陆",
            "schema": {
              "type": "object",
              "properties": {
                "studentId": {
                  "type": "string"
                },
                "nickname": {
                  "type": "string"
                }
              },
              "example": {
                "studentId": "15331060",
                "nickname": "sugerpocket"
              }
            }
          },
          "401": {
            "description": "未登陆",
            "schema": {
              "type": "string",
              "example": "您还未登录"
            }
          }
        }
      },
      "post": {
        "summary": "用户登录",
        "description": "用户登录使用的 api",
        "parameters": [{
          "name": "username",
          "in": "body",
          "description": "用户8位学号",
          "type": "number"
        }, {
          "name": "password",
          "in": "body",
          "description": "用户密码",
          "type": "string"
        }],
        "responses": {
          "200": {
            "description": "登陆成功",
            "schema": {
              "type": "object",
              "properties": {
                "studentId": {
                  "type": "string"
                },
                "nickname": {
                  "type": "string"
                }
              },
              "example": {
                "studentId": "15331060",
                "nickname": "sugerpocket"
              }
            }
          },
          "400": {
            "description": "登陆失败",
            "schema": {
              "description": "失败原因",
              "type": "string",
              "example": "用户不存在"
            }
          }
        }
      }
    },
    "/user/register": {
      "post": {
        "summary": "用户注册",
        "description": "用户注册使用的 api",
        "parameters": [{
          "name": "nickname",
          "in": "body",
          "description": "用户昵称",
          "type": "string"
        }, {
          "name": "username",
          "in": "body",
          "description": "用户8位学号",
          "type": "number"
        }, {
          "name": "password",
          "in": "body",
          "description": "用户密码",
          "type": "string"
        }],
        "responses": {
          "200": {
            "description": "注册成功",
            "schema": {
              "type": "object",
              "properties": {
                "studentId": {
                  "type": "number"
                },
                "nickname": {
                  "type": "string"
                }
              },
              "example": {
                "studentId": 15331060,
                "nickname": "sugerpocket"
              }
            }
          },
          "400": {
            "description": "注册失败",
            "schema": {
              "description": "失败原因",
              "type": "string",
              "example": "用户名必须为8位学号"
            }
          }
        }
      }
    },
